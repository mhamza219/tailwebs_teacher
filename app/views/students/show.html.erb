<h1>Student Details</h1>

<table>
  <thead>
    <tr>
      <th>Attribute</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><%= @student.name %></td>
    </tr>
    <tr>
      <td><strong>Subject</strong></td>
      <td><%= @student.subject %></td>
    </tr>
    <tr>
      <td><strong>Marks</strong></td>
      <td><%= @student.marks %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_student_path(@student), class: 'button' %>
<%= link_to 'Back', students_path, class: 'button' %>

<style>

  .button {
    display: inline-block;
    margin: 10px 0;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }

  .button:hover {
    background-color: #45a049;
  }
</style>
